@page "/home"
@layout Shared.SocialLayout

<div class="main-content">
    <div class="container" style="width: 90%; margin-left: auto; margin-right: auto; background-color: rgba(255,255,255,0.05);padding: 1%;margin-bottom: 3%">
        <div class="row" style="text-align: center">
            <div class="col">
                <a href="/profile" class="link-primary">
                    <h3>Live Game Info</h3>
                </a>
                <div style="background-color: rgba(255,255,255,0.05)">
                    LIVE - Overwatch<br>
                    KDA - 2.5
                </div>
            </div>
            <div class="col">
                <a href="/tournament" class="link-primary">
                    <h3>Tournament</h3>
                </a>
                <div style="background-color: rgba(255,255,255,0.05)">
                    Weekly5x5 - Ongoing<br>
                    Weekly5x5 - In 7 days
                </div>
            </div>
            <div class="col">
                <a href="/clans" class="link-primary">
                    <h3>Clan Events</h3>
                </a>
                <div style="background-color: rgba(255,255,255,0.05)">
                    Superclan - Raid in 5 hours<br>
                </div>
            </div>
            <div class="col">
                <a href="/tournament" class="link-primary">
                    <h3>Notifications</h3>
                </a>
                <div style="background-color: rgba(255,255,255,0.05)">
                    <br>
                </div>
            </div>
        </div>
    </div>
    <div class="card" style="width: 90%; background-color: rgba(255,255,255,0.05); margin-left: auto; margin-right: auto; margin-bottom: 5%">
        <div class="card-body">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Share what's new here!" style="width: 90%;background-color: rgba(255,255,255,0.05); color: white" ></textarea>
            <div class="row">
                <div class="col">
                    <input class="form-control" type="file" id="formFile" style="background-color: rgba(255,255,255,0.05); color: white; width: 60%">
                </div>
                <div class="col">
                    <button class="btn btn-primary" style="margin-left: 50%">Submit</button>
                </div>
            </div>
        </div>
    </div>
    <div class="card" style="width: 90%; background-color: rgba(255,255,255,0.05); margin-left: auto; margin-right: auto; margin-bottom: 5%">
        <div class="row">
            <div class="col-2">
                <img src="Icons\\account.svg" class="card-img-top" alt="Profile Picture" height="150px" width="150px"/>
                <h3 style="text-align: center">Username</h3>
            </div>

            <div class="col">
                <div class="card-body">
                    <h5 class="card-title">Posted @DateTime.Now</h5>
                    <p class="card-text">Here is a post! This could be anything!</p>
                    <div style="position: absolute; bottom: 0; right: 13px;">
                        <button class="btn" onclick="" style="font-size: 24px; background-color: rgba(255,255,255,0.05);">
                            ðŸ”¥
                        </button>
                        <button class="btn" type="button" @onclick="() => this.Collapsed = !this.Collapsed" style="background-color: rgba(255,255,255,0.05);" >
                            <RadzenIcon Icon="comment" Style="color: white; height: 36px;"/>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="collapse" Collapse="@Collapsed" id="collapseExample">
        <div class="card card-body">
            Some placeholder content for the collapse component. This panel is hidden by default but revealed when the user activates the relevant trigger.
        </div>
    </div>
    <div class="card" style="width: 90%; background-color: rgba(255,255,255,0.05); margin-left: auto; margin-right: auto; margin-bottom: 5%">
        <div class="row">
            <div class="col-2">
                <img src="Icons\\account.svg" class="card-img-top" alt="Profile Picture" height="150px" width="150px"/>
                <h3 style="text-align: center">Username</h3>
            </div>

            <div class="col">
                <div class="card-body">
                    <h5 class="card-title">Posted @DateTime.Now</h5>
                    <iframe width="560" height="315" src="https://www.youtube-nocookie.com/embed/O161-WNZBP4" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <div style="position: absolute; bottom: 0; right: 13px;">
                        <button class="btn" onclick="" style="font-size: 24px; background-color: rgba(255,255,255,0.05);">
                            ðŸ”¥
                        </button>
                        <button class="btn" onclick="" style="background-color: rgba(255,255,255,0.05);">
                            <RadzenIcon Icon="comment" Style="color: white; height: 36px;"/>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
