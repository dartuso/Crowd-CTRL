@page "/signup"
@inject NavigationManager NavigationManager

<style>
    .jumbotron {
        text-align: center;
        background-color: #121212;
        margin-top: 5%;
    }

</style>

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="jumbotron">
                <h1 style="font-size: 50px">Welcome to <span class="spantitle" style="color: #7289da; font-size: 50px">Crowd CTRL</span></h1>
                <h2>Connect, Play, Share!</h2>
            </div>
        </div>
    </div>
    <h2 style="text-align: center;">Sign Up</h2>
    <div class="row clearfix">
        <div class="col-md-4 column">
        </div>
        <div class="col-md-4 column">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="inputUsername3" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <input @bind="_username" type="text" class="form-control" style="width: 120%; background-color: rgba(255,255,255,0.05); color: white" id="inputUsername3" placeholder="Example: epicPlayer" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" style="width: 120%; background-color: rgba(255,255,255,0.05); color: white" id="inputEmail3" placeholder="Example: epicPlayer@gmail.com" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input @bind="_password" type="password" class="form-control" style="width: 120%; background-color: rgba(255,255,255,0.05); color: white" id="inputPassword3" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword4" class="col-sm-2 control-label">Confirm Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" style="width: 120%; background-color: rgba(255,255,255,0.05); color: white" id="inputPassword4" />
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" style="margin: 10px 10px 10px 20px;width: 140px" @onclick="RegisterNavigate">Register</button>
                    <button class="btn btn-primary" style="margin-top: 10px; margin-bottom: 10px; width: 150px" @onclick="BackNavigate">Back</button>
                </div>
            </form>
        </div>
        <div class="col-md-4 column">
        </div>
    </div>
</div>

@code{
    string _username = "", _password = "";
    
    private void BackNavigate()
    {
        Program.User.Username = _username;
        Program.User.Password = _password;
        NavigationManager.NavigateTo("login");
    }

    private void RegisterNavigate()
    {
        NavigationManager.NavigateTo("account_validation");
    }
}