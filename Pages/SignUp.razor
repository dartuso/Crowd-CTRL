@page "/signup"
@inject NavigationManager NavigationManager

<style>
    .jumbotron {
        text-align: center;
        background-color: black;
        margin-top: 5%;
    }
    html {
        background-color: black;
    }
</style>

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="jumbotron">
                <h1 style="font-size: 50px">Welcome to <span class="spantitle" style="color: #7289da; font-size: 50px">Crowd CTRL</span></h1>
                <h2>Connect, Play, Share!</h2>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-4 column">
        </div>
        <div class="col-md-4 column">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="inputUsername3" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" style="width: 120%" class="form-control" id="inputUsername3" placeholder="Example: epicPlayer" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" style="width: 120%"  class="form-control" id="inputEmail3" placeholder="Example: epicPlayer@gmail.com" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" style="width: 120%" class="form-control" id="inputPassword3" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword4" class="col-sm-2 control-label">Password&nbspConfirm</label>
                    <div class="col-sm-10">
                        <input type="password" style="width: 120%" class="form-control" id="inputPassword4" />
                    </div>
                </div>
                <div class="form-group">
                    <RadzenButton Text="Register" Style="margin-top: 10px; margin-bottom: 10px; margin-left: 20px; margin-right: 10px; width: 140px" Click="RegisterNavigate" />
                    <RadzenButton Text="Back" Style="margin-top: 10px; margin-bottom: 10px; width: 150px" Click="HomeNavigate" />
                </div>
            </form>
        </div>
        <div class="col-md-4 column">
        </div>
    </div>
</div>

@code{
    private void HomeNavigate()
    {
        NavigationManager.NavigateTo("login");
    }

    private void RegisterNavigate()
    {
        NavigationManager.NavigateTo("account_validation");
    }
}