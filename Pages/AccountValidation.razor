@page "/account_validation"

@inject NavigationManager NavigationManager

<style>
    .jumbotron {
        text-align: center;
        background-color: #121212;
        margin-top: 10%;
    }
</style>

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="jumbotron">
                <h1 style="font-size: 50px">Welcome to <span class="spantitle" style="color: #7289da; font-size: 50px">Crowd CTRL</span></h1>
                <h2>Connect, Play, Share!</h2>
                <br><br>
