                <div class="form-group">
                    <label for="inputVerificationCode3" class="col-sm-2 control-label">Verification&nbspCode</label>
                    <div class="col-sm-10">
                        <input type="password" style="width: 120%" class="form-control" id="inputVerificationCode3" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="login_signup_button">
                        <button class="btn btn-primary" style="margin-top: 10px; margin-bottom: 10px; margin-left: 20px; margin-right: 10px; width: 140px" @onclick="CodeValidate">Validate</button>
                        <button class="btn btn-primary" style="margin-top: 10px; margin-bottom: 10px; width: 150px" @onclick="ResendValidateCode">Resend</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4 column">
        </div>
    </div>
</div>

