@page "/login"
@inject NavigationManager NavigationManager

<style>
    .jumbotron {
        text-align: center;
        background-color: black;
        margin-top: 10%;
    }
    html {
        background-color: black;
    }
</style>

<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="jumbotron">
                <h1 style="font-size: 50px">Welcome to <span class="spantitle" style="color: #7289da; font-size: 50px">Crowd CTRL</span></h1>
                <h2>Connect, Play, Share!</h2>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-4 column">
        </div>
        <div class="col-md-4 column">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="inputUsername3" class="col-sm-2 control-label">Account</label>
                    <div class="col-sm-10">
                        <input type="text" style="width: 120%" class="form-control" id="inputUsername3" placeholder="Enter username or email ..."  />
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" style="width: 120%"class="form-control" id="inputPassword3" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="login_signup_button">
                        <RadzenButton Text="Login" Style="margin-top: 10px; margin-left: 20px; margin-right: 10px;margin-bottom: 10px; margin-right: 10px; width: 140px" Click="HomeNavigate" />
                        <RadzenButton Text="Sign Up"   Style="margin-top: 10px;   margin-bottom: 10px; width: 150px" Click="SignUpNavigate" />
                    </div>
                    <div class="password_reset_button">
                        <RadzenButton Text="Password Recovery" Style="margin-top: 10px;  margin-left: 20px; margin-bottom: 10px; width: 305px" Click="PasswordRecoveryNavigate" ButtonStyle="ButtonStyle.Secondary"/>
                    </div>
                   </div>
</form>
        </div>
        <div class="col-md-4 column">
        </div>
    </div>
</div>


@code{

    private void HomeNavigate()
    {
        NavigationManager.NavigateTo("home");
    }
    private void SignUpNavigate()
    {
        NavigationManager.NavigateTo("signup");
    }
    private void PasswordRecoveryNavigate()
    {
        NavigationManager.NavigateTo("passwordrecovery");
    }
}