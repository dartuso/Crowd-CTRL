@page "/clans"
@layout Shared.SocialLayout


<style>

    .clans-container {
        min-height: 400px;
        display: grid;
        grid-template-columns: 1fr 1fr 0.3fr;
        grid-template-rows: auto auto 4fr;
        grid-template-areas: 
            "search search button1"
            ". . new"
            "content content .";
    }

    .search {
        margin: 10px;
        grid-area: search;
    }

    .new {
        font-size: 1.5em;
        margin: 10px;
        grid-area: new;
    }

    .search-button {
        font-size: 1.5em;
        margin: 10px;
        grid-area: button1;
    }

    .clan-entries {
        margin: 10px;
        background: rgba(253,255,255,0.05);
        grid-area: content;
    }

    .clan-card {
        background-color: rgba(255,255,255,0.05); 
        margin: 5px;
        border: 1px solid black;
        display: grid;
        grid-template-columns: 1fr 3fr 1fr;
        grid-template-rows: 1fr 3fr;
        grid-template-areas:
            "pict name ."
            "pict desc req";
    }

    .name {
        margin: 10px;
        grid-area: name;
        font-size: 1.1em;
    }

    .pict {
        margin: 10px;
        grid-area: pict;
        justify-self: center;
        align-self: center;
        background-color: rgba(255,255,255,0.05);  
    }

    .req {
        margin: 10px;
        grid-area: req;
        justify-self: end;
        align-self: end;
    }

    .desc {
        margin: 10px;
        grid-area: desc;
        font-size: 0.9em;
        background-color: rgba(255,255,255,0.05); 
    }

    
    input {
        margin: 5px;
        display: block;
        line-height: 30px;
        width: 98%;
    }
</style>


