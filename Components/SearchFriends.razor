@namespace Components
@inject NavigationManager NavigationManager

<style>
    .main-friend-search-container{
        @* position: relative; *@
        margin: auto;
        width: 70%;
        height: 80%;
    }
    .search-container{
        height: 10%;
        padding-bottom: 4%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .search-results-container{
        height: 90%;
        background-color: #4d4d4d;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    form{
        width: 100%;
    }
    .res-list{
        width:90%;
    }
    
</style>
<div class="main-friend-search-container">
    <div class="search-container">
        <form style="display: flex; justify-content: center;">
            <input type="text" id="searchBox" name="searchBox" style="width: 70%;"> 
            <input type="submit" value="Search">
        </form>
    </div>
    <div class="list-header">
        <h2>My Friends</h2>
    </div>
    <div class="search-results-container">
        <div class="res-list">
            <RadzenLink Path="user_profile" Text="Friend 1" /><br><br>
            <h3>Friend 2</h3><br><br>
            <h3>Friend 3</h3><br><br>
        </div>
    </div>
</div>

@code{
    private void UserProfileNavigate()
    {
        NavigationManager.NavigateTo("user_profile");
    }
}